<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.0"/>
  <object class="GtkDialog" id="note_viewer">
    <property name="title">Note Viewer</property>
    <property name="default-width">300</property>
    <property name="default-height">200</property>
    <child internal-child="vbox">
      <object class="GtkBox" id="viewer_box">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="border-width">10</property>
        <child>
          <object class="GtkLabel" id="viewer_title_label"/>
        </child>
        <child>
          <object class="GtkTextView" id="viewer_text_view"/>
        </child>
        <child>
          <object class="GtkCheckButton" id="viewer_completed_check_button">
            <property name="label">Выполнено</property>
          </object>
        </child>
        <child>
          <object class="GtkButtonBox">
            <property name="layout-style">spread</property>
            <child>
              <object class="GtkButton" id="viewer_close_button">
                <property name="label">Закрыть</property>
                <signal name="clicked" handler="on_viewer_close_button_clicked" swapped="no"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
